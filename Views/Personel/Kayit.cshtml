@model Kayit
@{
    ViewData["Title"] = "Kayit";
}

<h1>Personel Kaydı</h1>
<div class="bg-primary text-white p-1 m-1">
    <h2>Yeni kayıt oluşturma</h2>
</div>

<form class="m-1 p-1" asp-action="Kayit" method="post">

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="UserName">Ad Soyad</label>
        <input asp-for="UserName" class="form-control" />
    </div>
    
    <div class="form-group">
        <label asp-for="Password">Şifre</label>
        <input asp-for="Password" class="form-control" />
    </div>
    
    @*<div class="form-group">
        <label >Şifre tekrar giriniz</label>
        <input  class="form-control" />
    </div>*@

    <div class="form-group">
        <label asp-for="Email">İsim</label>
        <input asp-for="Email" class="form-control" />
    </div>
     
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Kaydet" />
        <a class="btn btn-danger" asp-area="" asp-controller="Personel" asp-action="Liste">İptal</a>
    </div>

</form>