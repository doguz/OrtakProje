@{
    ViewData["Title"] = "Anasayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-3 p-3 m-3 lead">Projeler</h1>
    <div class="row">
        <div class="col-4">
            <div class="card" style="min-height:100%;">
                <div class="card-body">
                    <i class="bi bi-people-fill" style="font-size: 5rem; color:cornflowerblue;"></i>
                    <h5 class="card-title">Personel</h5>
                    <p class="card-text">İdari Büro Amirliği</p>
                    <a class="btn btn-outline-primary" asp-area="" asp-controller="Personel" asp-action="Index">Git</a>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card" style="min-height:100%">
                <div class="card-body">
                    <i class="bi bi-car-front-fill" style="font-size: 5rem; color:cornflowerblue;"></i>
                    <h5 class="card-title">Araçlar</h5>
                    <p class="card-text">İdari Büro Amirliği</p>
                    <a class="btn btn-outline-primary" asp-area="" asp-controller="Arac" asp-action="Index">Git</a>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card" style="min-height:100%">
                <div class="card-body">
                    <i class="bi bi-collection-fill" style="font-size: 5rem; color:cornflowerblue;"></i>
                    <h5 class="card-title">Demirbaş</h5>
                    <p class="card-text">İdari Büro Amirliği</p>
                    <a class="btn btn-outline-primary" asp-area="" asp-controller="Demirbas" asp-action="Index">Git</a>
                </div>
            </div>
        </div>
        
    </div>
</div>                                                                                                                                                   