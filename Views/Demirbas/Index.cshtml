@model IEnumerable<Demirbas>
@{
    ViewData["Title"] = "Demirbaş Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="border border-secondary border-1 m-3 p-3 ">

    <div class="container p-3">
        <div class="row pt-4">
            <h1 class="text-primary text-center">Demirbaş Listesi</h1>
        </div>
    </div>

    <table class="table-bordered table-striped" style="width:100%">
        <thead>
            <tr class="text-center">
                <th>Sıra Numarası</th>
                <th>Marka</th>
                <th>Model</th>
                <th>Cinsi</th>
                <th>Seri No</th>
                <th>Açıklama</th>
                <th class="text-end">
                    <a asp-controller="Demirbas" asp-action="Ekle" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp; Demirbaş Ekle</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.DemirbasModel.DemirbasMarka.Marka</td>
                    <td>@item.DemirbasModel</td>
                    <td>@item.DemirbasCinsi</td>
                    <td>@item.SeriNo</td>
                    <td>@item.Aciklama</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Demirbas" asp-action="Detay" class="btn btn-info"></a>
                            <a asp-controller="Demirbas" asp-action="Guncelle" asp-route-id="@item.Id" class="btn btn-warning mx-2"><i class="bi bi-pencil-square"></i></a>
                            <a data-target="#deleteModal" class="btn btn-danger"><i class="bi bi-x-circle"></i></a>
                            <button type="button" class="btn btn-danger" data-target="#deleteModal" data-toggle="modal">Nesneyi sil</button>
                            <!-- Modal -->
                            <div class="modal fade" id="deleteModal">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Kapat">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <p>Silmek istediğinizden emin misiniz?</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" id="close-modal">Geri dön</button>
                                            <button type="button" class="btn btn-danger" asp-controller="Demirbas" asp-action="Sil" asp-route-id="@item.Id">Sil</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>

            }
        </tbody>


    </table>
    <div class="card m-3 text-center border-2" role="group">
        <h3 class="card-header">Yapılandırma</h3>
        <div class="card-body">
            <a asp-controller="DemirbasMarka" asp-action="Index" class="btn btn-light">Marka</a>
            <a asp-controller="DemirbasModel" asp-action="Index" class="btn btn-light">Model</a>
            <a asp-controller="DemirbasCins" asp-action="Index" class="btn btn-light">Kategori</a>
        </div>
        
    </div>

</div>