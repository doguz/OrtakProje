@model Proje.Models.Demirbas
@{
    ViewBag.Title = "Demirbaş Ekleme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <div class="border p-3 m-3">
        <h2 class="text-primary">Demirbaş Ekle</h2>
        <hr />
        <div class="container-fluid">
            <div class="row">
                <div class="col-3 p-3">
                    @*<select asp-for="DemirbasModel" class="form-control" asp-items="@(new SelectList(ViewBag.demirbasMarkaValues,"Id","Marka"))">
                    </select>*@
                    @*<select asp-for="DemirbasModel" class="form-control" asp-items="@(new SelectList(ViewBag.demirbasModelValues))">
