                    @Html.DropDownList("ddlModel", @ViewBag.demirbasModelValues, "-- Model Seçiniz --", new { @class="form-control"})*@
                </div>
                <div class="col-3 p-3">
                    @Html.DropDownListFor(x=>x.DemirbasCinsiId,(List<SelectListItem>)ViewBag.demirbasCinsiValues, "-- Demirbaş Cinsi --", new { @class="form-control"})
                    @*<select asp-for="DemirbasCinsi" class="form-control" asp-items="@(new SelectList(ViewBag.demirbasCinsiValues))">
                    </select>*@
                </div>
                <div class="col-3 p-3">
                    <input asp-for="SeriNo" class="form-control" style="" placeholder="-- Seri Numarası Giriniz --" />
                </div>
                <div class="col-3 p-3">
                    <textarea asp-for="Aciklama" placeholder="Açıklama..." class="form-control col-6" rows="4" cols="50"></textarea>
                </div>
            </div>
            <div class="col-3 p-3 text-end">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </div>
    </div>
    @*<div asp-validation-summary="All"></div>*@

</form>

